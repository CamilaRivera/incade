<script>
  var navbar = $('.navbar');
  var previousScroll = undefined;
  $(window).scroll(function (e) {
    var newScroll = $(window).scrollTop();
    if (previousScroll !== undefined) {
      if (previousScroll < newScroll && newScroll > 200) {
        navbar.removeClass('scrolled-up');
        navbar.addClass('scrolled-down');
      } else if (previousScroll > newScroll) {
        navbar.removeClass('scrolled-down');
        navbar.addClass('scrolled-up');
      }
    }
    previousScroll = newScroll;
  });

  // For mobile, collapse the navbar on click
  var navMain = $('.navbar-collapse'); // avoid dependency on #id
  // "a:not([data-toggle])" - to avoid issues caused
  // when you have dropdown inside navbar
  navMain.on('click', 'a:not([data-toggle])', null, function () {
    navMain.collapse('hide');
  });
</script>
