
<form action="/contacto#contacto" method="post" class="contact-form">
  <div class="row">
    <div class="col-md-6 col-xl">
      <div class="form-group">
        <label for="name">Nombre</label>
        <input
          type="text"
          class="form-control p-3 rounded-0"
          id="name"
          name="name"
          value="<%= contactForm.data?.name || '' %>"
          <%if (contactForm.success === true) { %>
            readonly="readonly"
          <% } %>
        />
      </div>
    </div>
    <div class="col-md-6 col-xl">
      <div class="form-group">
        <label for="email">Email</label>
        <input
          name="email"
          type="email"
          class="form-control p-3 rounded-0"
          id="email"
          value="<%= contactForm.data?.email || '' %>"
          <%if (contactForm.success === true) { %>
            readonly="readonly"
          <% } %>
        />
      </div>
    </div>
    <div class="col-md-6 col-xl">
      <div class="form-group">
        <label for="phone">Tel√©fono</label>
        <input
          name="phone"
          type="phone"
          class="form-control p-3 rounded-0"
          id="phone"
          value="<%= contactForm.data?.phone || '' %>"
          <%if (contactForm.success === true) { %>
            readonly="readonly"
          <% } %>
        />
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="message">Mensaje</label>
    <textarea
      name="message"
      cols="30"
      rows="10"
      class="form-control p-3 rounded-0"
      id="message"
      <%if (contactForm.success === true) { %>
        readonly="readonly"
      <% } %>
    ><%= contactForm.data?.message || '' %></textarea>
  </div>
  <div class="form-group">
    <input
      type="submit"
      class="btn btn-primary contact-form-button"
      value="Enviar"
      <%if (contactForm.success === true) { %>
        disabled="disabled"
      <% } %>
    />
  </div>
</form>
<%if (contactForm.success === true) { %>
  <div class="alert alert-success" role="alert">
    Su mensaje ha sido enviado!
  </div>
<% } %>
<%if (contactForm.errors?.message) { %>
  <div class="alert alert-danger" role="alert">
    <%= contactForm.errors.message %>
  </div>
<% } %>
<%if (contactForm.errors?.emailFailure === true) { %>
  <div class="alert alert-danger" role="alert">
    Hubo un error al intentar mandar el mensaje de contacto, por favor intente nuevamente.
    Si el error persiste, por favor envie un email directamente a <a href="mailto:<%= contactEmail %>"><%= contactEmail %></a>
  </div>
<% } %>

